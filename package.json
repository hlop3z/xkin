{
  "name": "xkin",
  "version": "0.1.3",
  "description": "A lightweight TypeScript UI library for web applications",
  "type": "module",
  "main": "dist/index.iife.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "author": {
    "name": "hlop3z"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hlop3z/xkin.git"
  },
  "bugs": {
    "url": "https://github.com/hlop3z/xkin/issues"
  },
  "homepage": "https://github.com/hlop3z/xkin#readme",
  "keywords": [
    "ui",
    "components",
    "styling",
    "web",
    "typescript"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bunx --bun vite --host",
    "build": "tsc && vite build",
    "prepare": "husky install && npm run build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run test && npm run lint:fix",
    "lint:fix": "eslint src/**/*.ts --fix --max-warnings=999",
    "docs": "bunx typedoc src/main.ts --out docs_ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.46.0",
    "husky": "^8.0.3",
    "jsdom": "^26.0.0",
    "prettier": "^3.0.1",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^0.34.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
